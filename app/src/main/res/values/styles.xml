<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background</item>
        <item name="backgroundMenu">@color/backgroundMenu</item>
        <item name="backgroundLogin">@color/backgroundLogin</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="refreshColor">@color/background</item>
        <item name="android:textColorSecondary">@color/hintColor</item>
        <item name="android:alertDialogStyle">@style/AppCompatAlertDialogStyle</item>


    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background2</item>
        <item name="backgroundMenu">@color/backgroundMenu2</item>
        <item name="backgroundLogin">@color/backgroundLogin2</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textColorHint">@color/hintColor2</item>
        <item name="refreshColor">@color/background2</item>
        <item name="android:textColorSecondary">@color/hintColor2</item>
        <item name="android:alertDialogStyle">@style/AppCompatAlertDialogStyleDark</item>

    </style>

    <style name="galeryPopup">
        <item name="android:windowExitAnimation">@anim/a_gallery</item>
        <item name="android:windowEnterAnimation">@anim/b_gallery</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="WindowsAnimationThemes">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:background">@color/backgroundLogin</item>
        <item name="android:bottomBright">@color/backgroundLogin</item>
        <item name="android:bottomDark">@color/backgroundLogin</item>
        <item name="android:bottomMedium">@color/backgroundLogin</item>
        <item name="android:centerBright">@color/backgroundLogin</item>
        <item name="android:centerDark">@color/backgroundLogin</item>
        <item name="android:centerMedium">@color/backgroundLogin</item>
        <item name="android:fullBright">@color/backgroundLogin</item>
        <item name="android:fullDark">@color/backgroundLogin</item>
        <item name="android:topBright">@color/backgroundLogin</item>
        <item name="android:topDark">@color/backgroundLogin</item>
    </style>

    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor2</item>
        <item name="android:background">@color/backgroundLogin2</item>
        <item name="android:bottomBright">@color/backgroundLogin2</item>
        <item name="android:bottomDark">@color/backgroundLogin2</item>
        <item name="android:bottomMedium">@color/backgroundLogin2</item>
        <item name="android:centerBright">@color/backgroundLogin2</item>
        <item name="android:centerDark">@color/backgroundLogin2</item>
        <item name="android:centerMedium">@color/backgroundLogin2</item>
        <item name="android:fullBright">@color/backgroundLogin2</item>
        <item name="android:fullDark">@color/backgroundLogin2</item>
        <item name="android:topBright">@color/backgroundLogin2</item>
        <item name="android:topDark">@color/backgroundLogin2</item>
    </style>


</resources>
