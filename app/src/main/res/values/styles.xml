<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background</item>
        <item name="backgroundMenu">@color/backgroundMenu</item>
        <item name="backgroundLogin">@color/backgroundLogin</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="refreshColor">@color/background</item>
        <item name="android:textColorSecondary">@color/hintColor</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background2</item>
        <item name="backgroundMenu">@color/backgroundMenu2</item>
        <item name="backgroundLogin">@color/backgroundLogin2</item>
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textColorHint">@color/hintColor2</item>
        <item name="refreshColor">@color/background2</item>
        <item name="android:textColorSecondary">@color/hintColor2</item>

    </style>

    <style name="galeryPopup">
        <item name="android:windowExitAnimation">@anim/a_gallery</item>
        <item name="android:windowEnterAnimation">@anim/b_gallery</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="WindowsAnimationThemes">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>
